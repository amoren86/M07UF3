<?xml version="1.0" encoding="UTF-8"?>
<resources>
	<jdbc-connection-pool name="social" res-type="javax.sql.DataSource" 
		datasource-classname="org.h2.jdbcx.JdbcDataSource" is-connection-validation-required="false">
		<property name="URL"
			value="jdbc:h2:mem:social;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE" />
		<property name="User" value="user" />
		<property name="Password" value="password" />
	</jdbc-connection-pool>
	<jdbc-resource pool-name="social" jndi-name="jdbc/social" />
</resources>